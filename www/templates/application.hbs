<div class="app" data-sidebar="locked">
    <!-- top header -->
    <header class="header header-fixed navbar bg-white">
        <div class="brand bg-success">
            <a href="#" class="fa fa-bars off-left visible-xs" data-toggle="off-canvas" data-move="ltr"></a>
            <a href="index.html" class="navbar-brand text-white">
                <span id="page-title">
                Assignments Due
                </span>
            </a>

            <button type="button" class="btn btn-rounded btn-white reset" {{action 'reset'}}><i class="fa fa-refresh"></i></button>
            <br/>
        </div>
    </header>
    <!-- /top header -->

    <section class="layout">
        <!-- sidebar menu -->
        <aside class="sidebar canvas-left bg-dark">
            <!-- main navigation -->
            <nav class="main-navigation">
                <ul>
                    {{#link-to 'assignments' tagName='li'}}
                        <a class="h4">
                            <i class="fa fa-coffee"></i>
                        <span>
                        Assignments
                        </span>
                        </a>
                    {{/link-to}}

                    {{#link-to 'completedAssignments' tagName='li'}}
                        <a class="h4">
                            &emsp;&emsp;&emsp;
                            <i class="fa fa-coffee"></i>
                        <span>
                        Completed
                        </span>
                        </a>
                    {{/link-to}}

                    {{#link-to 'enrolled' tagName='li'}}
                        <a class="h4">
                            <i class="fa fa-coffee"></i>
                        <span>
                        My Courses
                        </span>
                        </a>
                    {{/link-to}}

                    {{#link-to 'unenrolled' tagName='li'}}
                        <a class="h4">
                            <i class="fa fa-coffee"></i>
                        <span>
                        Add Courses
                        </span>
                        </a>
                    {{/link-to}}

                </ul>
            </nav>
            <!-- /main navigation -->
        </aside>
        <!-- /sidebar menu -->

        <!-- main content -->
        <section class="main-content">
            <!-- content wrapper -->
            <div class="content-wrap">
                {{outlet}}
            </div>
            <!-- /content wrapper -->
            <div class="site-overlay"></div>
        </section>
        <!-- /main content -->
    </section>

</div>